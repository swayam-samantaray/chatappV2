        $.ajax({
            url: '/api/message/SendMessage',
            type: 'POST',
            contentType: 'application/json',
            data: JSON.stringify(forwardData),
            success: () => console.log("Message forwarded"),
            error: (xhr, status, error) => console.error("Forward failed")
        });
    }


